{
  "nvidia_server": {
    "host": "nvidia-gpu-server.example.com",
    "user": "username",
    "port": 22,
    "key_file": "~/.ssh/id_rsa",
    "cuda_path": "/usr/local/cuda",
    "workspace": "/home/username/cuda-tests",
    "gpu_id": 0,
    "cuda_version": "12.0"
  },
  "intel_server": {
    "host": "intel-gpu-server.example.com",
    "user": "username",
    "port": 22,
    "key_file": "~/.ssh/id_rsa",
    "oneapi_path": "/opt/intel/oneapi",
    "workspace": "/home/username/sycl-tests",
    "device_selector": "level_zero:gpu",
    "dpcpp_version": "2023.2.0"
  },
  "comparison": {
    "relative_tolerance": 1e-6,
    "absolute_tolerance": 1e-9,
    "max_mismatches_to_report": 100
  },
  "execution": {
    "timeout_seconds": 300,
    "retry_attempts": 3,
    "compression_enabled": true,
    "cleanup_remote_after": true
  }
}